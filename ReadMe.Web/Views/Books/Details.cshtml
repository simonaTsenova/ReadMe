@model ReadMe.Web.Models.Books.BookDetailsViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title">Book details</h2>

<div class="book-details">
    <hr/>
    
    @Html.Partial("_BookInfoPartial", @Model.BookInfoViewModel)

    <div class="col-md-12">
        <h3 class="section-title">Reviews</h3>
        <div class="section-title-divider"></div>
    </div>
    @if (Model.FormReviewViewModel != null && User.Identity.IsAuthenticated)
    {
        @Html.Partial("_FormReviewPartial", @Model.FormReviewViewModel)
    }

    <hr />
    @Html.Partial("_BookReviewsPartial", @Model.ReviewViewModels)
    
</div>

@section scripts {
    @Scripts.Render("~/bundles/reviews")
    @Scripts.Render("~/bundles/book-status")
    @Scripts.Render("~/bundles/rating")
}
