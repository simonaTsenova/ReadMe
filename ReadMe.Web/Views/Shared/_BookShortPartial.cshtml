@using ReadMe.Web.Models.Books

@model BookShortViewModel

<div class="card col-md-2">
    <a href="/books/details/@Model.Id">
        <img width="100px" class="card-img-top" src=@Model.PhotoUrl alt="Card image cap">
    </a>
    <div class="card-block">
        <h4 class="card-title">@Html.ActionLink(@Model.Title, "Details", "Books", routeValues: new { area = "", id = @Model.Id }, htmlAttributes: null)</h4>
        <p class="card-text">by @Html.ActionLink(Model.Author.FirstName + " " + Model.Author.LastName, "Details", "Authors",  routeValues: new { area = "", id = @Model.Author.Id}, htmlAttributes: null)</p>
        <p class="card-text"><small class="text-muted">Published on @Html.DisplayFor(model => model.Published)</small></p>
    </div>
</div>                