@model ReadMe.Web.Models.Reviews.ReviewViewModel

<div class="mbr-testimonial card">
    <div class="card-block">
        <p>@Model.Content</p>
        <p style="font-size:1rem">Posted on @Html.DisplayFor(Model => Model.PostedOn)</p>
    </div>
    <div class="mbr-author card-footer">
        <div class="mbr-author-name">
            by
            <img id="review-user-img" class="img-circle" src="@Model.User.PhotoUrl" width="2%" />
            - @Model.User.UserName
        </div>
    </div>
</div>
